<div class="container">
  <% if notice %>
    <p id="notice" class="alert alert-success"><%= notice %></p>
  <% end %>

  <p>
    <strong>Name:</strong>
    <%= @user.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>

  <div class="btn-edit">
    <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-primary' %>
  </div>
</div>
