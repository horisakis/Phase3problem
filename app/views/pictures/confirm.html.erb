<h2>Confirm</h2>
<%= image_tag @picture.image %>
<%= @picture.message %>
<%= form_with(model: @picture, url: user_pictures_path, local: true) do |form| %>
  <div class="field">
    <%= form.hidden_field :image_cache, value: @picture.image.cache_name %>
    <%= form.hidden_field :message, value: @picture.message %>
  </div>
  <div class="actions">
    <%= form.submit '登録' %>
  </div>
<% end %>
<%= form_with(model: @picture, url: new_user_picture_path, method: 'get', local: true) do |form| %>
  <div class="field">
    <%= form.hidden_field :image_cache, value: @picture.image.cache_name %>
    <%= form.hidden_field :message, value: @picture.message %>
  </div>

  <div class="actions">
    <%= form.submit '戻る', name: 'back' %>
  </div>
<% end %>
