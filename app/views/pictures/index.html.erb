<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Massage</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= image_tag picture.image %></td>
        <td><%= picture.message %></td>
        <td><%= picture.user_id %></td>
        <td><%= link_to 'Show', user_picture_path(picture, user_id: picture.user_id) %></td>
        <td><%= link_to 'Edit', edit_user_picture_path(picture, user_id: picture.user_id) %></td>
        <td><%= link_to 'Destroy', user_picture_path(picture, user_id: picture.user_id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_user_picture_path %>
