<p id="notice"><%= notice %></p>

<h1>Favorites</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Massage</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <% picture  = Picture.find favorite.picture_id %>
        <td><%= image_tag(picture.image) %></td>
        <td><%= picture.message %></td>
        <td><%= favorite.user_id %></td>
        <td><%= link_to 'Show', user_favorite_path(favorite, user_id: favorite.user_id) %></td>
        <td><%= link_to 'Edit', edit_user_favorite_path(favorite, user_id: favorite.user_id) %></td>
        <td><%= link_to 'Destroy', user_favorite_path(favorite, user_id: favorite.user_id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Favorite', new_user_favorite_path %>
